@{
    Layout = null;
}
@model Resposta
<!DOCTYPE html>
<html>
    <head>
        <title>ASP</title>
    </head>
    <body>
        <h1>Meu Formulario</h1>
        <div asp-validation-summary=All>
            <form method="post" action="/Home/SalvarResposta">

            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome"/>
            <label asp-for="Email">Email:</label>
            <input asp-for="Email"/>
            <label asp-for="Opcao">Resposta:</label>
            <input asp-for="Opcao"/>

            <button>ENVIAR</button>

        </form>

        </div>
        
    </body>
</html>